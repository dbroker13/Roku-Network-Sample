<?xml version="1.0" encoding="utf-8" ?>
<component name="CustomButton" extends="Group" focusable="true">
    <interface>
        <field id="text" type="string" />
        <field id="buttonSelected" type="boolean" alwaysNotify="true" />
    </interface>
    <children>
        <Rectangle
            id="background"
            width="200"
            height="50"
            color="0x808080FF" />
        <Label
            id="label"
            width="200"
            height="50"
            horizAlign="center"
            vertAlign="center"
            color="0xFFFFFFFF" />
    </children>
    <script type="text/brightscript" uri="CustomButton.brs" />
</component>
